<Page
    x:Class="AnimalTales.MainPage"
    IsTabStop="false"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnimalTales"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Page.Resources>
		<Storyboard x:Name="sbMonkey" RepeatBehavior="Forever">
			<DoubleAnimation Duration="0" To="-123.881" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="monkeyTimeA" d:IsOptimized="True"/>
			<DoubleAnimation Duration="0" To="-76.12" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="monkeyTimeA" d:IsOptimized="True"/>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="monkeyTimeA">
				<EasingDoubleKeyFrame KeyTime="0" Value="1"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.1" Value="1"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:2" Value="0"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="monkeyTime">
				<EasingDoubleKeyFrame KeyTime="0:0:1.1" Value="-58.505"/>
				<EasingDoubleKeyFrame KeyTime="0:0:2.5" Value="-70.149"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="monkeyTime">
				<EasingDoubleKeyFrame KeyTime="0:0:1.1" Value="-65.37"/>
				<EasingDoubleKeyFrame KeyTime="0:0:2.5" Value="-83.582"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="monkeyTime">
				<EasingDoubleKeyFrame KeyTime="0" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.1" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="1"/>
				<EasingDoubleKeyFrame KeyTime="0:0:2.5" Value="1"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
        <Storyboard x:Name="sbBugsleaf" RepeatBehavior="Forever">
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="bugLeaf">
				<EasingDoubleKeyFrame KeyTime="0:0:6.9" Value="-54.714"/>
				<EasingDoubleKeyFrame KeyTime="0:0:11.6" Value="-139.428"/>
				<EasingDoubleKeyFrame KeyTime="0:0:17.9" Value="-284.142"/>
				<EasingDoubleKeyFrame KeyTime="0:0:24" Value="-448.856"/>
				<EasingDoubleKeyFrame KeyTime="0:0:30.8" Value="-623.57"/>
				<EasingDoubleKeyFrame KeyTime="0:0:31.8" Value="-718.284"/>
				<EasingDoubleKeyFrame KeyTime="0:0:35.1" Value="-862.998"/>
				<EasingDoubleKeyFrame KeyTime="0:0:48.2" Value="-947.712"/>
				<EasingDoubleKeyFrame KeyTime="0:0:55" Value="-1017.426"/>
				<EasingDoubleKeyFrame KeyTime="0:1:0" Value="-1092.14"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="bugLeaf">
				<EasingDoubleKeyFrame KeyTime="0:0:6.9" Value="-4"/>
				<EasingDoubleKeyFrame KeyTime="0:0:11.6" Value="-13"/>
				<EasingDoubleKeyFrame KeyTime="0:0:17.9" Value="12"/>
				<EasingDoubleKeyFrame KeyTime="0:0:24" Value="-7"/>
				<EasingDoubleKeyFrame KeyTime="0:0:30.8" Value="-6"/>
				<EasingDoubleKeyFrame KeyTime="0:0:31.8" Value="20"/>
				<EasingDoubleKeyFrame KeyTime="0:0:35.1" Value="16"/>
				<EasingDoubleKeyFrame KeyTime="0:0:48.2" Value="32"/>
				<EasingDoubleKeyFrame KeyTime="0:0:55" Value="32"/>
				<EasingDoubleKeyFrame KeyTime="0:1:0" Value="7"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="bugLeaf">
				<EasingDoubleKeyFrame KeyTime="0:1:0" Value="1"/>
				<EasingDoubleKeyFrame KeyTime="0:1:3.2" Value="0"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</Page.Resources>
	<Page.TopAppBar>
		<AppBar RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
			<AppBar.RenderTransform>
				<CompositeTransform SkewX="3.795" TranslateX="2.919"/>
			</AppBar.RenderTransform>
			<MediaElement x:Name="frogImage" HorizontalAlignment="Left" Height="48.179" VerticalAlignment="Top" Width="1346" AudioCategory="GameEffects" IsLooping="True" PosterSource="Images/LionZion.png" RenderTransformOrigin="0.501999974250793,0.331999987363815"/>
		</AppBar>
	</Page.TopAppBar>
	<Page.BottomAppBar>
		<AppBar>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<StackPanel Orientation="Horizontal"/>
				<StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal"/>
			</Grid>
		</AppBar>
	</Page.BottomAppBar>

    <Grid Background="{StaticResource HyperlinkForegroundThemeBrush}">
    	<Canvas x:Name="myCanvas" HorizontalAlignment="Left" Height="840" Margin="93,-49,0,-23" VerticalAlignment="Top" Width="1249" AllowDrop="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ToolTipService.ToolTip="click on characters to move them">
        	<Canvas.Background>
        		<ImageBrush ImageSource="Images/StoryBacks.png" Stretch="Uniform"/>
        	</Canvas.Background>
            <TextBlock x:Name="txtInfo" Canvas.Left="410" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="94" FontSize="33" Visibility="Collapsed"/>
            <Image x:ConnectionId='9' x:Name="frogZion" Height="100" Canvas.Left="-98" Canvas.Top="545" Width="100" Source="Images/Froggy.png" ToolTipService.ToolTip="ribbit ribbit" ManipulationMode="All"                                                                            />
            <Grid x:Name="wolfGrid" Height="320" Canvas.Left="-194" Canvas.Top="286" Width="320">
            	<Image x:ConnectionId='13' x:Name="wolfZion" Source="Images/Wolf.png" ToolTipService.ToolTip="howler" ManipulationMode="All"                                                                             Margin="-2,-2,2,2">
            		<Image.RenderTransform>
            			<TranslateTransform x:Name="wolfPos" />
            		</Image.RenderTransform>
            	</Image>
            	<MediaElement x:Name="wolfMedia" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="55" Margin="249,79,0,0" Source="Audio/07 In Hell I Burn.mp3" Visibility="Collapsed"/>
            </Grid>
            <Image x:ConnectionId='10' x:Name="turtleZion" Height="180" Canvas.Left="-128" Source="Images/TurtleT.png" Canvas.Top="62" Width="180" ToolTipService.ToolTip="turtleT"                                                                               ManipulationMode="All">
                    <Image.RenderTransform>
                    <TranslateTransform x:Name="turtlePos" />
                </Image.RenderTransform>
            </Image>
            <Image x:ConnectionId='11' x:Name="jackHare" Height="130" Canvas.Left="-128" Source="Images/Rabbit.png" Canvas.Top="269" Width="130" ManipulationMode="All" ToolTipService.ToolTip="get your carrot fix here kid"                                                                              >
            <Image.RenderTransform>
                    <TranslateTransform x:Name="rabbitPos" />
                </Image.RenderTransform>
            </Image>
            <Grid x:ConnectionId='12' x:Name="beezCaptionGrid" Height="187" Canvas.Left="179" Canvas.Top="94" Width="330" ManipulationMode="All"                                                                                       >
            	<Grid x:Name="CaptionBeeGrid" Margin="90,0,0,0">
            		<Grid.RowDefinitions>
            			<RowDefinition Height="84*"/>
            			<RowDefinition Height="11*"/>
            			<RowDefinition Height="92*"/>
            		</Grid.RowDefinitions>
            	</Grid>
            	<TextBlock x:Name="beeStoryText" TextWrapping="Wrap" FontSize="18.667" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" Foreground="#FF0F77F3" FontWeight="Bold" FontFamily="Showcard Gothic" Canvas.ZIndex="88" Margin="50,31,66,91" ManipulationMode="None"/>
            	<Image x:Name="bCaptionBubble" Source="Images/Caption.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" ManipulationMode="All" Margin="-10,0,15,0"/>
            </Grid>
            <Image x:Name="monkeyTimeA" Height="200" Canvas.Left="1132.358" Source="Images/Monkey.png" Stretch="Fill" Canvas.Top="226.642" Width="200" RenderTransformOrigin="0.5,0.5">
            	<Image.RenderTransform>
            		<CompositeTransform/>
            	</Image.RenderTransform>
            </Image>
            <Image x:Name="monkeyTime" Height="160" Canvas.Left="1132.358" Source="Images/Monkey1.png" Stretch="Fill" Canvas.Top="249.03" Width="160" RenderTransformOrigin="0.5,0.5">
            	<Image.RenderTransform>
            		<CompositeTransform/>
            	</Image.RenderTransform>
            </Image>
            <Image x:Name="bugLeaf" Height="151" Canvas.Left="1094" Canvas.Top="639" Width="155" ToolTipService.ToolTip="beep beep" Source="Images/buglseaf.png" RenderTransformOrigin="0.5,0.5" CacheMode="BitmapCache">
            	<Image.RenderTransform>
            		<CompositeTransform/>
            	</Image.RenderTransform>
            </Image>
        </Canvas>
    	<TextBox x:ConnectionId='1' x:Name="storyBTeller" HorizontalAlignment="Left" Margin="694.841,710.033,0,-2.02" TextWrapping="Wrap" Text="My Story " VerticalAlignment="Top" Height="59.987" RenderTransformOrigin="0.497000008821487,0.626999974250793" UseLayoutRounding="False" Width="650.14" d:LayoutRounding="Auto" Background="#FFA0D1F9" FontSize="18.667" FontWeight="Bold"                         AcceptsReturn="True" IsSpellCheckEnabled="True" AllowDrop="True">
    		<TextBox.RenderTransform>
    			<CompositeTransform Rotation="-0.217" TranslateX="0.032" TranslateY="0.014"/>
    		</TextBox.RenderTransform>
    	</TextBox>

        <TextBox x:ConnectionId='2' x:Name="storyTeller" HorizontalAlignment="Left" Margin="96,710,0,0" TextWrapping="Wrap" Text="my Story" VerticalAlignment="Top" Width="599" Height="58" FontFamily="Stencil" FontSize="18.667" FontWeight="Bold" AcceptsReturn="True" ToolTipService.ToolTip="Go on kid write a story" IsSpellCheckEnabled="True" Background="#FFC2F188" AllowDrop="True" CacheMode="BitmapCache"                         >
    		<TextBox.Transitions>
    			<TransitionCollection/>
    		</TextBox.Transitions>
    		<TextBox.InputScope>
    			<InputScope/>
    		</TextBox.InputScope>
    	</TextBox>
        <Grid x:ConnectionId='3' Margin="140,470,969,215" x:Name="captionGrid"                                                                                    ManipulationMode="All">
            <Grid.RowDefinitions>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>
            <Grid.RenderTransform>
                <TranslateTransform x:Name="captionPos"/>
            </Grid.RenderTransform>
            <TextBlock x:Name="txtStoryText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF123408" FontSize="18.667" Width="232" Height="77" FontFamily="Showcard Gothic" FontWeight="Bold" AllowDrop="True" Canvas.ZIndex="33" IsTextSelectionEnabled="True" Margin="10,23,0,-36" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" ManipulationMode="None" Grid.RowSpan="2"/>
            <Image x:Name="captionBubble" Source="Images/Caption.png" Margin="-22.749,-26.67,-45.252,-77.104" RenderTransformOrigin="0.507000029087067,1.5" ManipulationMode="All" Grid.RowSpan="2" UseLayoutRounding="False" d:LayoutRounding="Auto" Stretch="Fill" Width="325">
            	<Image.RenderTransform>
            		<CompositeTransform SkewX="0.096" TranslateX="-19.827" SkewY="-0.348" ScaleX="0.999" TranslateY="5.47" Rotation="-0.123" ScaleY="1.001"/>
            	</Image.RenderTransform>
            </Image>
        </Grid>
        <Image x:ConnectionId='4' x:Name="lionZion" HorizontalAlignment="Left" Height="400" Margin="595,166.881,0,0" VerticalAlignment="Top" Width="400" Source="Images/LionZion.png" ToolTipService.ToolTip="I am King hear me Roar"                                             AllowDrop="True"                                 ManipulationMode="All"                                >
            <Image.RenderTransform>
                <TranslateTransform x:Name="lionPos" />
            </Image.RenderTransform>  
        </Image>
        <Image x:Name="miniLogo" Margin="-53,734,1221,0" Source="Images/WideLogo.png" ScrollViewer.HorizontalScrollBarVisibility="Auto" RenderTransformOrigin="0.5,0.5"/>
        <Image x:ConnectionId='5' x:Name="bobSquirrel" Margin="0,113,1256,545" Source="Images/MySquirrel.png" ToolTipService.ToolTip="pass the cashews man" ManipulationMode="All"                                                                                >
        <Image.RenderTransform>
                <TranslateTransform x:Name="squirrelPos" />
            </Image.RenderTransform>
        </Image>
        <MediaElement x:Name="starMedia" Margin="50,710,1316,58" Source="Audio/Child.mp3" PosterSource="Assets/Logo.png" IsLooping="True" RealTimePlayback="True" AutoPlay="False"/>
<!-- Stops media playback.-->
        <Button x:ConnectionId='6'                   Content="Stop" Margin="0,696,0,34" Width="96" Background="#FF1262D4" />
           
        
        <!-- Pauses media playback. -->
        <Button x:ConnectionId='7'                    Content="Pause" Margin="0,654.714,0,78.285" Width="96" Background="#FF2A74DE" />

        <!-- Begins media playback. -->
        <Button x:ConnectionId='8'                   Content="Play Song" Margin="0,601,0,119" Width="96" Background="#FF0B479E" Height="47.93" />

    </Grid>
    
</Page>

